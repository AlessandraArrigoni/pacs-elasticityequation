%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% parameters for program laplacian: soluzione y a sx e 3y a dx  %
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

[bulkData1]

        [./domain1]

                meshExternal = none
                meshFolder = ./meshes/   %per caricare mesh fatte con altri tool

                spatialDiscretizationX = 30  %altrimenti, suddivisione in x e y
                spatialDiscretizationY = 30
                lengthAbscissa = 0.5    %misure in x e y
                lengthOrdinate = 1.0
                startingAbscissa = 0
                startingOrdinate = 0
                meshType = GT_PK(2,1)  % questa mesh è di triangoli lineari
                spaceDimension = 2   %bidimensionale

        [../]


        [./laplacian1]

		bcflag = [0,0,0,1]   % 0 diri, 1 neumann, numerazione dei bordi: sotto, destra, sopra, sinistra.
    interfaceIdx = 1 %Sto assumendo che i lati siano ordinati come prima, partendo da 0=sotto.
                diff = 1  %coefficiente di diffusione

                bulkLoad = 0  %forzante
                u_BC = y  %condizione dirichlet
		            du_BC = 0  %valore neumann

                FEMTypeSol = FEM_PK(2,1)  %tipo fem per la soluzione
                FEMTypeCoeff = FEM_PK(2,0)  %tipo fem per l'approssimazione dei coefficienti

                integrationMethod = IM_TRIANGLE(6)

        [../]

[../]

[bulkData2]

        [./domain2]

                meshExternal = none
                meshFolder = ./meshes/   %per caricare mesh fatte con altri tool

                spatialDiscretizationX = 30  %altrimenti, suddivisione in x e y
                spatialDiscretizationY = 30
                lengthAbscissa = 0.5  %misure in x e y
                lengthOrdinate = 1.0
                startingAbscissa = 0.5 %traslazione del punto (0,0)
                startingOrdinate = 0
                meshType = GT_PK(2,1)  % questa mesh è di triangoli lineari
                spaceDimension = 2   %bidimensionale

        [../]


        [./laplacian2]

		bcflag = [0,1,0,1]   %0 diri, 1 neumann, numerazione dei bordi: sotto, destra, sopra, sinistra
    interfaceIdx = 3 % Sto assumendo che i lati siano ordinati come prima, partendo da 0=sotto.
                diff = 1  %coefficiente di diffusione

                bulkLoad = 0  %forzante
                u_BC = 3*y  %condizione dirichlet (valore della soluzione)
		            du_BC = 0  %valore neumann

                FEMTypeSol = FEM_PK(2,1)  %tipo fem per la soluzione
                FEMTypeCoeff = FEM_PK(2,0)  %tipo fem per l'approssimazione dei coefficienti

                integrationMethod = IM_TRIANGLE(6)

        [../]

[../]


% PROBABILMENTE POSSO CAMBIARE LE LUNGHEZZE DI ASCISSA E ORDINATA IN QUESTO FILE PER DECIDERE LA GRANDEZZA DELLA MESH CHE VIENE CREATA IN BULK. POI DEVO MODIFICARE LA MATRICE DI TRASFORMAZIONE M DEL FILE Bulk.cc PER TRASLARLA ANCHE!
% Nel nostro caso l'interfaccia sarà di tipo Dirichlet dove si assegna q0 (dominio a sx) e di tipo Neumann dove si assegna q1 (dominio a dx)
